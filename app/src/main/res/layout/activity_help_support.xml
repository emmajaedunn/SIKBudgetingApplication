<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="48dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start|center_vertical"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/arrow_back_ic"
            android:contentDescription="@string/back_button" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="45dp"
            android:paddingStart="4dp"
            android:text="@string/help_support"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="21sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="18dp" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingTop="48dp"
            android:paddingBottom="48dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- FAQ 1 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/question1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/lightgreen_color2"
                        android:backgroundTint="@color/lightgreen_color2"
                        android:clickable="true"
                        android:drawablePadding="8dp"
                        android:focusable="true"
                        android:padding="16dp"
                        android:text="How do I set a budget goal?"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        app:drawableEndCompat="@drawable/ic_expand"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/answer1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Go to the Budgeting Goals section and tap on 'Add Goal' to set a new one."
                        android:textSize="14sp"
                        android:padding="16dp"
                        android:visibility="gone"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- FAQ 2 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/question2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/lightgreen_color2"
                        android:backgroundTint="@color/lightgreen_color2"
                        android:clickable="true"
                        android:drawablePadding="8dp"
                        android:focusable="true"
                        android:padding="16dp"
                        android:text="How can I see my progress with the budget?"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        app:drawableEndCompat="@drawable/ic_expand"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/answer2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Head over to stats to see the progress with your selected budgets."
                        android:textSize="14sp"
                        android:padding="16dp"
                        android:visibility="gone"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- FAQ 3 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/question3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/lightgreen_color2"
                        android:backgroundTint="@color/lightgreen_color2"
                        android:clickable="true"
                        android:drawablePadding="8dp"
                        android:focusable="true"
                        android:padding="16dp"
                        android:text="What are the achievements for?"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        app:drawableEndCompat="@drawable/ic_expand"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/answer3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Our achievemnets help you stay encouraged and gamify your
                        budgeting experience to make it more enjoyable."
                        android:textSize="14sp"
                        android:padding="16dp"
                        android:visibility="gone"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- FAQ 4 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/question4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/lightgreen_color2"
                        android:clickable="true"
                        android:drawablePadding="8dp"
                        android:focusable="true"
                        android:padding="16dp"
                        android:text="How do I change my password?"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        app:drawableEndCompat="@drawable/ic_expand"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/answer4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Go to Settings then to Profile and then you will be able to view all
                        your information and change your password."
                        android:textSize="14sp"
                        android:padding="16dp"
                        android:visibility="gone"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- FAQ 5 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/question5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/lightgreen_color2"
                        android:clickable="true"
                        android:drawablePadding="8dp"
                        android:focusable="true"
                        android:padding="16dp"
                        android:text="Will my data be saved on the app?"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        app:drawableEndCompat="@drawable/ic_expand"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/answer5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Yes, our app makes use of Firebase, a cloud based database."
                        android:textSize="14sp"
                        android:padding="16dp"
                        android:visibility="gone"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- FAQ 6 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/question6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/lightgreen_color2"
                        android:clickable="true"
                        android:drawablePadding="8dp"
                        android:focusable="true"
                        android:padding="16dp"
                        android:text="How to ensure i don't forget to budget?"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        app:drawableEndCompat="@drawable/ic_expand"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/answer6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Make sure to enable notifications and alerts will be sent to your phone."
                        android:textSize="14sp"
                        android:padding="16dp"
                        android:visibility="gone"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
